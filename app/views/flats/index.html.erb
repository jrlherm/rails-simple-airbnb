<div class="banner mb-3 d-flex align-items-end" style="background: linear-gradient(90deg, rgba(255,255,255,0.6460784997592788) 0%, rgba(255,255,255,0.18389362580969892) 100%),
                                                      url('https://images.unsplash.com/photo-1570129477492-45c003edd2be?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60');
                                                      background-size: cover;
                                                      background-position: center;
                                                      height: 350px;">
  <div class="container pt-3">
    <div class="row">
      <div class="col-12">
        <h1>All our Flats</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <% if @query %>
          <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
        <% else %>
          <p>All <%= Flat.count %> flats.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="container mb-3">
  <div class="row flat-cards">
    <% @flats.each do |flat| %>
      <div class="card flat-card">
        <a href="/flats/<%= flat.id %>">
          <img class="card-img-top" src="<%= flat.image_url %>" alt="Card image cap" style="height: 240px; object-fit: cover;" >
        </a>
        <div class="card-body d-flex flex-column justify-content-between">
          <div class="flex-grow-1">
            <h4><%= flat.name %></h4>
            <h6 class="mb-4"><%= flat.description %></h6>
          </div>

          <div class="d-flex mb-3">
            <h5><strong><i class="fas fa-dollar-sign"></i> </strong><%= flat.price_per_night %></h5>
            <h5 class="ml-3"><strong><i class="fas fa-users"></i> </strong><%= flat.number_of_guests %></h5>
          </div>

          <div>
            <%= link_to 'Details', flat_path(flat), class: "btn btn-sm btn-primary" %>
            <%= link_to icon('far', 'edit'), edit_flat_path(flat), class: "btn btn-sm btn-info" %>
            <%= link_to icon('far', 'trash-alt'),
                    flat_path(flat),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
